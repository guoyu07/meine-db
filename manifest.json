{
  "manifest_version": 2,

  "name": "Meine Deutsche Bank",
  "description": "This extension open and login at your bank account",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://meine.deutsche-bank.de/trxm/db/"],
      "js": ["crypto-js.js", "login.js"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": ""
  },

  "permissions": [
      "tabs",
      "storage"
   ]
}
